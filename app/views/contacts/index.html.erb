<p style="color: green"><%= notice %></p>

<h1><%= "#{t('messages.listing')} #{@contacts.model.model_name.human(count: 2)}"%></h1>

<div id="contacts">
  <% @contacts.each do |contact| %>
    <%= render contact %>
    <p>
      <%= link_to t('buttons.show'), contact %>
    </p>
  <% end %>
</div>

